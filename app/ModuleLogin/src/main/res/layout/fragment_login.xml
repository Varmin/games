<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff5f5f5">


            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:hint="请输入手机号/邮箱账号"
                android:padding="16dp"
                android:textColor="#000000"
                android:textColorHint="#afa4a4"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_expand_user"
                android:layout_width="wrap_content"
                android:src="@mipmap/expand_user"
                android:padding="3dp"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etPhone"
                app:layout_constraintBottom_toBottomOf="@+id/etPhone"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/color_ffffff"
                android:hint="@string/please_input_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/dp_16"
                android:textColor="@color/color_000000"
                android:textColorHint="@color/color_afa4a4"
                android:textSize="@dimen/sp_15"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPhone" />

            <ImageView
                android:id="@+id/ivPasswordVisibility"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@drawable/ic_close_eye"
                app:layout_constraintBottom_toBottomOf="@id/etPassword"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/etPassword" />

            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etPassword"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/color_ffffff"
                android:layout_height="wrap_content" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:button="@drawable/checkbox_selector_blue"
                    android:id="@+id/ckUserPwd"
                    android:text="记住密码"
                    android:textColor="@color/color_009fe9"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/dp_16"
                    android:text="@string/forgot_password"
                    android:textColor="@color/color_009fe9"
                    android:textSize="@dimen/sp_14"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_login_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_outside_china"
        android:textColor="@color/color_666666"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card" />

    <Button
        android:id="@+id/btn_login"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_blue_round_solid"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toTopOf="@id/tv_one_key_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_hint" />


    <View
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/tv_one_key_login"
        app:layout_constraintRight_toLeftOf="@id/tv_one_key_login"
        app:layout_constraintTop_toTopOf="@id/tv_one_key_login" />


    <TextView
        android:id="@+id/tv_one_key_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="@string/one_click_login"
        android:textColor="@color/color_999999"
        app:layout_constraintBottom_toTopOf="@id/iv_wechat_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login" />

    <View
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_999999"
        app:layout_constraintBottom_toBottomOf="@id/tv_one_key_login"
        app:layout_constraintLeft_toRightOf="@id/tv_one_key_login"
        app:layout_constraintTop_toTopOf="@id/tv_one_key_login" />

    <ImageView
        android:id="@+id/iv_wechat_login"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/icon_wechat"
        app:layout_constraintBottom_toTopOf="@id/ivBanner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_one_key_login" />

    <View
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_wechat_login" />

</androidx.constraintlayout.widget.ConstraintLayout>