<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopOnTestActivity">

    <FrameLayout
        android:id="@+id/flAdsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开屏广告："/>
        <Button
            android:id="@+id/btnSplash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44999999"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:text="splash"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="插屏广告："/>
        <Button
            android:id="@+id/btnLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44999999"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:text="load"/>
        <Button
            android:id="@+id/btnShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44999999"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:text="show"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="激励视频："/>
        <Button
            android:id="@+id/btnLoadReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44999999"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:text="loadReward"/>
        <Button
            android:id="@+id/btnShowReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44999999"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:text="showReward"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>